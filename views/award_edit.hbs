<h1>Edit Award (id: {{award.id}})</h1>

<form action="/awards/{{award.id}}/edit" method="post">

  <div class="form-group">
    <label for="locationId">Location (current: {{award.location}})</label>
    <select class="form-control" name="locationId">
      {{#each locations }}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="awardcategoryId">Award Category (current: {{award.awardcategory}})</label>
    <select class="form-control" name="awardcategoryId">
      {{#each awardcategorys }}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
