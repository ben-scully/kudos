<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h2>{{eventName}}  -  {{eventOfficeName}}  -  {{dateformat eventEnddate}}</h2>
    </div>
  </div>

  {{#each eventAwards}}
    <div class="row">

      <div class="col-md-12">
        <div class="panel panel-default">

          <div class="panel-heading">
            <p>{{awardcategoryName}}  -  {{awardcategoryDescription}}</p>
          </div>
          <div class="panel-body">
            <p>...</p>
          </div>

        </div>
      </div>

    </div>
  {{/each}}

  <div class="row">
    <div class="col-md-12">
        <h2>New Nomination:</h2>

        {{#each eventAwards}}
          <form action="/events/{{../eventId}}/awards/{{awardId}}/nominations" method="post">
        {{/each}}

          <div class="form-group">
            <label for="nominationStaffId">Staff</label>
            <select id="nominationStaffId" class="form-control" name="nominationStaffId">
              <option value="-1" selected="selected">Select a Staff Member</option>
            </select>
          </div>

          <div class="form-group">
            <label for="nominationDescription">Nomination Description</label>
            <textarea type="text" class="form-control" id="nominationDescription" name="nominationDescription" placeholder="Nomination description"></textarea>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        </form>

      </div>
  </div>

</div>
