<h1>Person Index</h1>

<table>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
  </thead>

  {{#each list }}
    <tr id='person{{id}}'>
      <td><a href="/persons/{{id}}">{{id}}</a></td>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td><a href="/persons/{{id}}/edit">edit</a></td>
    </tr>
  {{/each}}

</table>

<div>
  <a class="btn btn-default" href="/persons/new" role="button">Create</a>
</div>
