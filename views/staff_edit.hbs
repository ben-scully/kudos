<h1>Edit Staff (id: {{id}})</h1>

<form action="/staffs/{{id}}/edit" method="post">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" placeholder="Description" value="{{description}}">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
