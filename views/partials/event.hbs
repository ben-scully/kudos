
<div id="event{{id}}" class="event event-box box" data-id="{{id}}">

  <div class="event-box-header box-header">
    <div class="event-box-info box-info">
      <p>{{name}}</p>
      <p>{{officeName}}</p>
      <p>
        {{dateformat startdate}} - {{dateformat enddate}}
      </p>
    </div>

    <div class="buttons-box-event box-buttons">
      <button class="btn btn-info edit edit-event" type="submit">Edit</button>
      <button class="btn btn-success add add-award" type="submit">Add Award</button>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addAwardModal">Open Modal</button>
    </div>
  </div>

  <div class="awards-wrapper wrapper">
    {{#each awards}}
      {{> award }}
    {{/each}}
  </div>

</div>



<div class="modal fade" id="addAwardModal" tabindex="-1" role="dialog" aria-labelledby="addAwardModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addAwardModalLabel">Add Award</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label class="control-label">Event Name</label>
            <p class="form-control-static">{{name}}</p>
          </div>
          <div class="form-group">
            <label class="control-label">Office</label>
            <p class="form-control-static">{{officeName}}</p>
          </div>
          <div class="form-group">
            <label for="awardcategoryId">Award Category</label>
            <select id="addAwardModal-awardcategory" class="form-control" name="awardcategoryId">
              <option value="-1" selected="selected">Select an Award Category</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="addAwardModal-submit">Add Award</button>
      </div>
    </div>
  </div>
</div>
