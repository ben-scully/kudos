<table class="table table-hover">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th><a href="/offices/new">+ADD</a></th>
  </thead>

  {{#each offices }}
    <tr id='office{{id}}'>
      <td><a href="/offices/{{id}}">{{id}}</a></td>
      <td><a href="/offices/{{id}}">{{name}}</a></td>
      <td><a href="/offices/{{id}}">{{description}}</a></td>
      <td><a href="/offices/{{id}}/edit">edit</a></td>
    </tr>
  {{/each}}

</table>
